<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.uniobuda.nik.visualizer.androidproject2017">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Helpers.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_team"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_team"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoginActivity"
            android:label="Git Simulator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".Activities.RepoSelecterActivity"
            android:label="Select repo" />
        <activity
            android:name=".Activities.RepoAdderActivity"
            android:label="Add repo" />
        <activity
            android:name=".Activities.StatisticsActivity"
            android:label="Statistics" />
        <activity
            android:name=".Activities.VisualizerActivity"
            android:label="Visualizer" />
    </application>

</manifest>