<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/stat_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:drawablePadding="5dp"
            android:drawableStart="@android:drawable/ic_menu_revert"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="@string/repo_statistics"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TableLayout
            android:id="@+id/stat_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stat_title"
            android:background="@color/colorPrimaryDark"
            android:contextClickable="false"
            android:minHeight="400dp"
            android:padding="20dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/author"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_auth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="tessssssssst"
                    android:textColor="@color/colorWhite" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/total_commits"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_total_commit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="end"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/elapsed_time"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_elapsed_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/greatest_number_of_commits_by_size"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_winner_size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="end"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/greatest_number_of_commits_by_count"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_winner_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="end"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/busiest_period"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_period"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:padding="5dp"
                    android:text="@string/others"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/stat_other"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/cell_template"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</ScrollView>
